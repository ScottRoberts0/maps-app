<!DOCTYPE html>
<html lang="en">

<head>
  <title>My Maps</title>

  <link rel="stylesheet" href="/vendor/normalize-4.1.1.css" type="text/css" />
  <link rel="stylesheet" href="/vendor/border-box.css" type="text/css" />
  <link rel="stylesheet" href="/styles/layout.css" type="text/css" />
  <link rel="stylesheet" href="/styles/header.css" type="text/css" />
  <link rel="stylesheet" href="/styles/maps-show.css" type="text/css" />

  <link rel="stylesheet" href="http://cdn.leafletjs.com/leaflet-0.7.3/leaflet.css" />
  <script src="http://cdn.leafletjs.com/leaflet-0.7.3/leaflet.js"></script>
  <script type="text/javascript" src="/vendor/jquery-3.0.0.js"></script>
  <script type="text/javascript" src="/scripts/app.js"></script>
  <!-- Bootstrap CSS -->
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.2.1/css/bootstrap.min.css"
    integrity="sha384-GJzZqFGwb1QTTN6wy59ffF1BuGJpLSa9DkKMp0DgiMDm4iYMj70gZWKYbI706tWS" crossorigin="anonymous">
  <!-- font awesome-->
  <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.10.1/css/all.css"
    integrity="sha384-wxqG4glGB3nlqX0bi23nmgwCSjWIW13BdLUEYC4VIMehfbcro/ATkyDsF/AbIOVe" crossorigin="anonymous">

</head>

<body>
  <header class="border border-dark">
    <% include ./partials/_header %>
  </header>
  <div class=flex>
      <% include ./partials/_user-register-sign-in %>
      <% if ("user") { %>
        <div class="if-user-loggedin">
          <a class="dropdown-item" href="/singleUserMapsRoute">
            <h4>My Maps</h4>
          </a>
          <a class="dropdown-item" href="/newMapeRoute">
            <h4>Create Map</h4>
          </a>
          <a class="dropdown-item" href="/userFavoriteMapsRoute">
            <h4>Favorite Maps</h4>
          </a>
          <div class="dropdown-divider"></div>
          <% include ./partials/_edit-map-and-marker %>
        </div>
        <% } else { %>
        <div>
        </div>
        <% } %>
    <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
        <h4>My Maps</h4>
      <div class="carousel-inner">
        <div id="maps-picture" class="carousel-item active">
          <img
            src="https://media.blogto.com/articles/20171013-aloette-08.jpg?w=720&cmd=resize_then_crop&height=480&quality=70"
            class="d-block w-100" alt="...">
          <div class="carousel-caption d-none d-md-block">
            <a href="/singleMapRoute">
              <h4>hereDisplayMapDescription</h4>
            </a>
            <% if ("user") { %>
            <form action="/addToUserfavoriteMaps" method="POST">
              <button class="btn btn-link" type="submit">
                <h3><i class="fas fa-heart"></i></h3>
              </button>
            </form>
            <% } else { %>
              <% } %>
          </div>
        </div>
        <div class="carousel-item">
            <img
              src="http://foodology.ca/wp-content/uploads/2015/12/McD-Holiday-Warmers-620x379.png"
              class="d-block w-100" alt="...">
            <div class="carousel-caption d-none d-md-block">
              <a href="/singleMapRoute">
                <h4>hereDisplayMapDescription</h4>
              </a>
              <% if ("user") { %>
              <form action="/addToUserfavoriteMaps" method="POST">
                <button class="btn btn-link" type="submit">
                  <h3><i class="fas fa-heart"></i></h3>
                </button>
              </form>
              <% } else { %>
                <% } %>
            </div>
          </div>
        <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
          <span class="carousel-control-prev-icon" aria-hidden="true"></span>
          <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
          <span class="carousel-control-next-icon" aria-hidden="true"></span>
          <span class="sr-only">Next</span>
        </a>
      </div>
    </div>
  </div>
  <!-- Bootstrap JS -->
  <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"
    integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM"
    crossorigin="anonymous"></script>
</body>
</html>
